@using Agency.Core.Models;


@model Portfolio

<div class="container-fluid">
    <h1>Create Portfolio</h1>
</div>

<div class="container-fluid">

    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="@Model.Title">Title</label>
            <input asp-for="@Model.Title" type="text" class="form-control">
            <span asp-validation-for="@Model.Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Description">Description</label>
            <input asp-for="@Model.Description" type="text" class="form-control">
            <span asp-validation-for="@Model.Description"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.LittleDescription">LittleDescription</label>
            <input asp-for="@Model.LittleDescription" type="text" class="form-control">
            <span asp-validation-for="@Model.LittleDescription"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.FormFile">FormFile</label>
            <input asp-for="@Model.FormFile"  class="form-control">
            <span asp-validation-for="@Model.FormFile"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.ImageUrl">ImageUrl</label>
            <input asp-for="@Model.ImageUrl" type="text" class="form-control">
            <span asp-validation-for="@Model.ImageUrl"></span>
        </div>
        <div class="form-group">
            <select asp-for="CatagoryId" asp-items="@(new SelectList(ViewBag.Categories,"Id","Name"))"></select>
            
            <span asp-validation-for="@Model.CatagoryId"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>

</div>

